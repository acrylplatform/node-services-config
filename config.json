                "0 * * * * cd /home/acryl && node-services update 2>&1 | /usr/bin/logger -t acryl",
                "*/2 * * * * cd /home/acryl && su acryl -c 'node-services info' 2>&1 | /usr/bin/logger -t acryl",
                "@reboot cd /home/acryl && su acryl -c 'node-services check_service' 2>&1 | /usr/bin/logger -t acryl",
                "@reboot cd /home/acryl && su acryl -c 'node-services info' 2>&1 | /usr/bin/logger -t acryl",
                "@reboot cd /home/acryl && node-services update 2>&1 | /usr/bin/logger -t acryl"
            ],
        "crontab_file_path": "/usr/share/acryl/crontab_file"
